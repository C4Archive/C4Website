		<div id="content">
			<p id="title">Mouse Signals</p>
			<p>This example continuously visualizes various states of the mouse's position and buttons</p>
			<div id="media">
      	<div class="image">
		<img src="../../../content/98.examples/992.KeyboardMouse/93.MouseSignals/01.png" alt="Mouse Signals" width="480" height="422">
    
	</div>

  
  
  
  
  
  
  
</div>
			<p id="codecontent"><script type="syntaxhighlighter" class="brush: objc"><![CDATA[
#import "CFACanvas.h"

int totalPixels = 400;
int xvals[400];
int yvals[400];
int bvals[400];
int arrayIndex = 0;

@implementation CFACanvas
-(void)setup {
    [self drawStyle:ANIMATED];
    [self windowWidth:totalPixels andHeight:320];
    [CFAShape strokeWidth:1];
    [CFAShape noStroke];
    [CFAShape stroke:1.0f];
}
-(void)draw {
    [self background:0.5f];
    for(int i = 1; i < self.canvasWidth; i++) {
        xvals[i-1] = xvals[i];
        yvals[i-1] = yvals[i];
        bvals[i-1] = bvals[i];
    }
    
    xvals[totalPixels-1] = mousePos.x;
    yvals[totalPixels-1] = mousePos.y;
    if (mouseIsPressed) {
        bvals[totalPixels-1] = self.canvasHeight*.98;
    } else {
        bvals[totalPixels-1] = 0;
    }
    
    [CFAShape noStroke];
    [CFAShape fill:1.0f];
    [CFAShape rectWithXPos:0 
                      yPos:self.canvasHeight/3 
                     width:self.canvasWidth 
                 andHeight:self.canvasHeight/3+1];
    
    for(int i = 1; i < totalPixels; i++) {
        [CFAShape fill:1.0f];
        [CFAShape pointAtX:i Y:xvals[i]/3+2*self.canvasHeight/3];
        [CFAShape fill:0];
        [CFAShape pointAtX:i Y:yvals[i]/3+self.canvasHeight/3];
        [CFAShape stroke];
        [CFAShape lineFromX:i-1 Y:bvals[i-1]/3 toX:i Y:bvals[i]/3];
    }
}
@end]]></script>
</p>
