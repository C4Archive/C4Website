			<p id="codecontent"><script type="syntaxhighlighter" class="brush: objc"><![CDATA[
#import "CFACanvas.h"
int k;
int xpos1 = 100;
int xpos2 = 118;
int count = 0;
int timey = 0;
int num = 12;

@implementation CFACanvas
-(void)setup {
    [self flipCoordinates];
    [self windowWidth:400 andHeight:320];
    [self background:0.4f];
    [CFAShape noStroke];
}
-(void)draw {
    [CFAShape fill:1.0f];
    k = 65;
    for(int i = 0; i < num/3; i++) {
        [CFAShape rectWithXPos:25 yPos:k width:155 andHeight:10];
        k+=20;
    }
    [CFAShape fill:0.2f];
    k = 100;
    for(int i = 0; i < num; i++) {
        [CFAShape rectWithXPos:160 yPos:k width:30 andHeight:10];
        k+=20;
    }
    k = 15;
    for(int i = 0; i < num; i++) {
        [CFAShape rectWithXPos:225 yPos:k width:30 andHeight:10];
        k+=20;
    }
    [CFAShape fill:0];
    k = 50;
    for(int i = 0; i < num-1; i++) {
        [CFAShape rectWithXPos:36 yPos:k width:20 andHeight:2];
        k+=20;
    }
}
@end]]></script>
</p>
