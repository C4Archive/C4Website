		<div id="content">
			<p id="title">Double Random</p>
			<p>This example embeds a random function within a random function to create a noisy distribution of points</p>
			<div id="media">
      	<div class="image">
		<img src="../../../content/98.examples/991.Math/93.DoubleRandom/01.png" alt="Double Random" width="480" height="422">
    
	</div>

  
  
  
  
  
  
  
</div>
			<p id="codecontent"><script type="syntaxhighlighter" class="brush: objc"><![CDATA[
#import "CFACanvas.h"

int totalPoints;
float steps;
int randomValue;

@implementation CFACanvas 
-(void)setup {
    [self drawStyle:EVENTBASED];
    [self windowWidth:400 andHeight:320];
    [CFAShape fill:1.0f];
    
    totalPoints = self.canvasWidth;
    steps = totalPoints + 1;
    randomValue = 0;
    [self background:0];
}

-(void)draw {
    randomValue = 0;
    [self background:0];
    for(int i = 1; i < steps; i++){
        int mod = 0;
        while (mod == 0) {
            mod = [CFAMath randomIntBetweenA:-1 andB:1];
        }
        [CFAShape pointAtX:self.canvasWidth/steps*i 
                         Y:self.canvasHeight/2 + mod*randomValue];
        randomValue += [CFAMath randomIntBetweenA:-10 andB:10];
    }
}
@end]]></script>
</p>
